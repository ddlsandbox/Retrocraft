{
  "multipart": [
      { "apply": { "model": "retrocraft:telepipe" }},
      { "when": { "up": true },
                  "apply": { "model": "retrocraft:telepipe_side" , "uvlock": true }
      },
      { "when": { "down": true },
                  "apply": { "model": "retrocraft:telepipe_side", "x": 180, "uvlock": true }
      },
      { "when": { "south": true },
                  "apply": { "model": "retrocraft:telepipe_side", "x": 90, "y": 180, "uvlock": true }
      },
      { "when": { "north": true },
                  "apply": { "model": "retrocraft:telepipe_side", "x": 90, "uvlock": true }
      },
      { "when": { "east": true },
                  "apply": { "model": "retrocraft:telepipe_side", "x": 90, "y": 90, "uvlock": true }
      },
      { "when": { "west": true },
                  "apply": { "model": "retrocraft:telepipe_side", "x": 90, "y": 270, "uvlock": true }
      }
  ],
  "inventory": {
	 "model": "retrocraft:telepipe",
	    	"transform": "forge:default-block"
  }
}
